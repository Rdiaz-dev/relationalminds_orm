<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             version="2.2"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence
                                 http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
    /* clases implementadas */
    <persistence-unit name="RelationalMindsPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>relationalminds.modelo.Cliente</class>
        <class>relationalminds.modelo.Articulo</class>
        <class>relationalminds.modelo.Pedido</class>




        <properties>
            /* Datos de conexion */
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/relationalminds_orm?useSSL=false&amp;serverTimezone=UTC"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="bochito"/>

            /* lenguaje para MYSQL */
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>

            /* esquema validate , truncate, update , drop */
            <property name="hibernate.hbm2ddl.auto" value="update"/>

            /* loging SQL */
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
